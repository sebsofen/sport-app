<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sebastians.sportan.fragments.AreaDetailAdminFragment"
    android:background="#ffffff">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/areaid_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submit_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_edit"
        android:hint="name"
        android:layout_below="@+id/img_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/img_btn"
        android:layout_alignEnd="@+id/img_btn" />

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sport_list"
        android:numColumns="3"
        android:choiceMode="multipleChoice"
        android:background="#c0c0c0"
        android:layout_below="@+id/description_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/area_img"
        android:background="#c75454"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/submit_btn"
        android:layout_alignEnd="@+id/submit_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select image"
        android:id="@+id/img_btn"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/area_img"
        android:layout_toStartOf="@+id/area_img" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/description_edit"
        android:hint="description"
        android:lines="5"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layout_below="@+id/area_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/area_img"
        android:layout_alignEnd="@+id/area_img" />

</RelativeLayout>
