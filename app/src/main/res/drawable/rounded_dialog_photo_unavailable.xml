<layer-list xmlns:android="http://schemas.android.com/apk/res/android"     android:elevation="5dp">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#d8d8d8" />
            <corners android:radius="7dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="2dp">

        <shape  android:shape="rectangle">

            <solid android:color="@color/colorSecond" />
            <corners android:radius="7dp" />
            <padding android:left="1dp" android:top="1dp" android:bottom="3dp" android:right="1dp"/>

        </shape>

    </item>

</layer-list>